<div class="container my-5 get-started-section">
    <div class="row text-center">
      <!-- Column 1: Upload Pictures -->
      <div class="col-md-4">
        <h3>Upload Pictures</h3>
        <form id="uploadForm" enctype="multipart/form-data">
          <input type="file" class="form-control" id="uploadInput" name="upload" accept="image/*">
        </form>
      </div>
  
      <!-- Column 2: Select Theme -->
      <div class="col-md-4">
        <h3>Select Theme</h3>
        <div class="btn-group-vertical w-100">
          <button type="button" class="btn btn-primary mb-2">Superhero</button>
          <button type="button" class="btn btn-primary mb-2">Anime</button>
          <button type="button" class="btn btn-primary mb-2">Cartoon</button>
        </div>
        <div class="mt-3">
          <input type="text" class="form-control" id="customTheme" placeholder="Custom Theme">
        </div>
      </div>
  
      <!-- Column 3: Let's Start Button -->
      <div class="col-md-4 d-flex align-items-center justify-content-center">
        <button type="button" class="btn btn-success btn-lg w-75" id="startButton">Let's Start</button>
      </div>
    </div>
  </div>
  