<!-- Get Started Section -->
<section id="get-started" class="get-started-section mx-auto">
  <div class="container">
    <div class="row text-center">
      <!-- Column 1: Subir Fotos -->
      <div class="col-md-4">
        <h3>Sube tus Fotos</h3>
        <form id="uploadForm" enctype="multipart/form-data">
          <input type="file" class="form-control mb-3" id="uploadInput" name="upload" accept="image/*">
          <small class="text-muted">Selecciona tus fotos para comenzar.</small>
        </form>
      </div>

      <!-- Column 2: Selecciona el Tema -->
      <div class="col-md-4">
        <h3>Selecciona el Tema</h3>
        <div class="row">
          <!-- Sub-column 1 -->
          <div class="col-md-6">
            <button type="button" class="btn btn-primary theme-btn mb-2">Superhéroe</button>
            <button type="button" class="btn btn-primary theme-btn mb-2">Anime</button>
            <button type="button" class="btn btn-primary theme-btn mb-2">Fiestas Patrias</button>
          </div>
          <!-- Sub-column 2 -->
          <div class="col-md-6">
            <button type="button" class="btn btn-primary theme-btn mb-2">Pokémon</button>
            <button type="button" class="btn btn-primary theme-btn mb-2">Videojuegos</button>
            <button type="button" class="btn btn-primary theme-btn mb-2">Espacio</button>
          </div>
        </div>
        <div class="mt-3">
          <input type="text" class="form-control" id="customTheme" placeholder="Tema Personalizado">
        </div>
      </div>

      <!-- Column 3: Botón de Comienzo -->
      <div class="col-md-4 d-flex align-items-center justify-content-center">
        <button type="button" class="btn btn-success btn-lg w-75" id="startButton">¡Comencemos!</button>
      </div>
    </div>
  </div>
</section>
